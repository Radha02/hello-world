#include<stdio.h>
#define null 0
int main()
{
    int n,r=0,rev=0;
    printf("enter the number");
    scanf("%d",&n);
    if(n = null)
    {
        rev =0;
    }
    else
    {
        while(n>0)
        {
            r = r%10;
            rev = rev*10+r;
            n = n/10;
        }
    }
    printf("reverse of number is %d",&n);
}
